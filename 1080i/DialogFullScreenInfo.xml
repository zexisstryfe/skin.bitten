<?xml version="1.0" encoding="UTF-8"?>

<window type="dialog" id="142">
    <defaultcontrol always="true">603</defaultcontrol>
	
    <controls>
	
        <control type="group">
		
            <control type="group">
                <animation type="WindowOpen">
                    <effect type="slide" start="0,-360" end="0,0" time="600" tween="cubic" easing="out" />
                </animation>
                <animation type="WindowClose">
                    <effect type="slide" start="0,0" end="0,-360" time="400" delay="200" tween="cubic" easing="in" />
                </animation>
				
                <control type="image">
                    <width>1920</width>
                    <height>300</height>
                    <fadetime>100</fadetime>
                    <include>Common_Color_BaseWhite</include>
                </control>

                <control type="image">
                    <width>1920</width>
                    <height>80</height>
                    <texture colordiffuse="BaseMediumHigh">colors/color_white.png</texture>
                </control>

                <control type="image">
					<posy>260</posy>
                    <width>1920</width>
                    <height>40</height>
                    <texture colordiffuse="BaseLow">colors/color_white.png</texture>
                </control>
				
                <control type="image">
                    <width>200</width>
                    <height>300</height>
                    <fadetime>100</fadetime>
                    <aspectratio align="left" aligny="center">stretch</aspectratio>
                    <texture>$VAR[Fullscreen_Image]</texture>
                </control>

				<!--Content-->
				<control type="group">			
					<posx>220</posx>
					<posy>20</posy>
				
					<control type="label">
						<width>940</width>
						<height>40</height>
						<font>font45R</font>
						<textcolor>$VAR[Accent_100]</textcolor>
						<label>$VAR[Fullscreen_Title]</label>
					</control>

					<control type="label" id="145">
						<posy>60</posy>
						<height>30</height>
						<font>font24B</font>
						<width>940</width>
						<textcolor>BaseMediumHigh</textcolor>
						<label>$VAR[Fullscreen_Subtitle]</label>
					</control>

					<!--Media Flags-->
					<control type="grouplist">
						<posx>980</posx>
						<width>700</width>
						<itemgap>20</itemgap>
						<orientation>horizontal</orientation>
						
						<include>VideoMPAAFlaggingConditions</include>
						
						<control type="image">
							<description>Video rez Image</description>
							<include>Dimensions_CodecFlags</include>
							<texture>$INFO[VideoPlayer.VideoResolution,flags/resolution/,.png]</texture>
						</control>
						
						<control type="image">
							<description>Common Codec Image</description>
							<include>Dimensions_CodecFlags</include>
							<texture>$INFO[VideoPlayer.VideoCodec,flags/videocodec/,.png]</texture>
							<visible>![substring(VideoPlayer.VideoCodec,div,left) | stringcompare(VideoPlayer.VideoCodec,dx50)]</visible>
						</control>
						
						<control type="image">
							<description>Aspectratio Image</description>
							<include>Dimensions_CodecFlags</include>
							<texture>$INFO[VideoPlayer.VideoAspect,flags/aspectratio/,.png]</texture>
						</control>
						
						<control type="image">
							<description>Audio Codec Image</description>
							<include>Dimensions_CodecFlags</include>
							<texture>$INFO[VideoPlayer.AudioCodec,flags/audiocodec/,.png]</texture>
						</control>
					
						<control type="image">
							<description>Audio Channels Image</description>
							<include>Dimensions_CodecFlags</include>
							<texture>$INFO[VideoPlayer.AudioChannels,flags/audiochannels/,.png]</texture>
						</control>
						
					</control>					
					
					<control type="textbox">
						<description>Plot</description>
						<posy>90</posy>
						<width>1680</width>
						<height>140</height>
						<align>justify</align>
						<font>font24R</font>
						<textcolor>BaseMid</textcolor>
						<label>$INFO[VideoPlayer.Plot]</label>
					</control>					

					<!--Progress Bar-->
					<control type="group">
					
						<control type="label">
							<description>Player Times</description>
							<posy>230</posy>
							<width>120</width>
							<label>[B]$INFO[Player.Time][/B]</label>
							<align>left</align>
							<textcolor>BaseMediumHigh</textcolor>
							<font>font24R</font>
						</control>
						
						<control type="progress">
							<description>Progressbar</description>
							<posx>130</posx>
							<posy>255</posy>
							<width>1400</width>
							<height>10</height>
							<info>Player.Progress</info>
						</control>		
						
						<control type="label">
							<description>Player Times</description>
							<posx>1660</posx>
							<posy>230</posy>
							<width>120</width>
							<label>[B]$INFO[Player.Duration][/B]</label>
							<align>right</align>
							<textcolor>BaseMediumHigh</textcolor>
							<font>font24R</font>
						</control>						
					
					</control>
					
				</control>

            </control>
			
        </control>
		
    </controls>
	
</window>
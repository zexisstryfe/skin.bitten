<?xml version="1.0" encoding="utf-8"?>

<includes>

    <include name="Viewtype_Panel_Album">
	
        <control type="group">
            <description>Album Panel View (id=54)</description>
			<visible>Control.IsVisible(54)</visible>

			<!--Scrollbar-->
			<control type="scrollbar" id="66">
				<posx>1225</posx>
				<height>1080</height>
				<width>10</width>
				<include>ShowOptions_Left</include>
				<onright>51</onright>
			</control>
						
			<!--Panel Area-->
            <control type="group"> 
				<posx>1235</posx>
                <include>Animation_Slide_Right</include>

				<control type="image">                  
                    <width>685</width>
                    <height>1080</height>
                    <include>Common_Color_BaseWhite</include>
                </control>

                <control type="panel" id="54">
                    <visible>[Container.Content(albums) | Container.Content(artists)] + !Container.Content(Genres)</visible>
                    <width>687</width>
                    <height>1080</height>
                    <scrolltime>300</scrolltime>
                    <orientation>vertical</orientation>
                    <viewtype label="Album Panel">Panel</viewtype>
                    <onleft>66</onleft>
                    <include>ShowOptions_Right</include>
                    <preloaditems>3</preloaditems>
                    <pagecontrol>66</pagecontrol>
                    <itemlayout width="229" height="277">
						
						<control type="image">								
							<width>227</width>
							<height>227</height>
							<include>Common_Color_BaseMediumHigh</include>
							<aspectratio scalediffuse="false">stretch</aspectratio>								
						</control>
						
						<control type="image">
							<width>227</width>
							<height>227</height>
							<texture>$VAR[Common_Fallback]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
						</control>
						
						<control type="image">
							<width>227</width>
							<height>227</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!stringcompare(ListItem.Label,..)</visible>
						</control>

						<control type="label">
							<posx>10</posx>
							<posy>227</posy>
							<width>215</width>
							<height>50</height>
							<aligny>center</aligny>
							<font>font20R</font>
							<label>$VAR[Fanart_List_Title]</label>
							<textcolor>BaseMediumHigh</textcolor>
						</control>
						
                    </itemlayout>
					
                    <focusedlayout width="229" height="277">

						<control type="image">
							<width>227</width>
							<height>277</height>
							<include>Common_Color_Accent</include>
						</control>

						<control type="image">								
							<width>227</width>
							<height>227</height>
							<include>Common_Color_BaseMid</include>
							<aspectratio scalediffuse="false">stretch</aspectratio>								
						</control>
						
						<control type="image">
							<width>227</width>
							<height>227</height>
							<texture>$VAR[Common_Fallback]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
						</control>
						
						<control type="image">
							<width>227</width>
							<height>227</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!stringcompare(ListItem.Label,..)</visible>
						</control>

						<control type="label">
							<posx>10</posx>
							<posy>227</posy>
							<width>215</width>
							<height>50</height>
							<aligny>center</aligny>
							<font>font20R</font>
							<label>$VAR[Fanart_List_Title]</label>
						</control>

                    </focusedlayout>
					
                </control>
				
            </control>

			<!--Info Area-->
            <control type="group">
				<posy>654</posy>
				<posx>80</posx>
			
				<control type="image">					
					<width>1145</width>
					<height>430</height>
					<include>Common_Color_BaseLow</include>
				</control>

				<control type="image">
					<posy>366</posy>
					<width>1145</width>
					<height>60</height>
					<include>Common_Color_BaseMediumHigh</include>
				</control>
				
				<control type="label">
					<posx>30</posx>
					<width>840</width>
					<include>Common_Fanart_Fadelabel</include>
					<label>$VAR[Fanart_Info_Title]</label>
				</control>
				
				<control type="label">
					<posx>30</posx>
					<width>740</width>
					<include>Common_Fanart_Subtitle</include>
				</control>

				<control type="image">
					<posx>40</posx>
					<posy>100</posy>
					<width>1065</width>
					<height>2</height>
					<include>Common_Color_BaseMediumHigh</include>
				</control>
				
				<control type="grouplist">
					<posx>705</posx>
					<posy>20</posy>
					<width>420</width>
					<height>60</height>
					<align>right</align>
					<orientation>horizontal</orientation>
					<visible>!stringcompare(ListItem.Label,..)</visible>
					
					<control type="group">
						<width>100</width>
						<visible>Container.Content(albums)</visible>
						
						<control type="label">
							<width>75</width>
							<include>Common_Fanart_Label</include>
							<label>$LOCALIZE[345]</label>
						</control>
						
						<control type="label">
							<posy>30</posy>
							<width>75</width>
							<include>Common_Fanart_Data</include>
							<label>$INFO[ListItem.Year]</label>
						</control>
						
					</control>
					
					<control type="group">
						<width>225</width>
						<visible>Container.Content(artists)</visible>
						
						<control type="label">
							<width>225</width>
							<include>Common_Fanart_Label</include>
							<label>$LOCALIZE[21898]</label>
						</control>
						
						<control type="label">
							<posy>30</posy>
							<width>225</width>
							<include>Common_Fanart_Data</include>
							<label fallback="1446">$INFO[ListItem.Property(Artist_YearsActive)]</label>
						</control>
						
					</control>
					
				</control>

				<control type="textbox">
					<posx>40</posx>
					<posy>110</posy>
					<width>1065</width>
					<height>240</height>
					<font>font26</font>
					<textcolor>BaseMediumHigh</textcolor>
					<align>justify</align>
					<label>$VAR[Common_Plot]</label>
					<autoscroll time="3000" delay="6000" repeat="8000"></autoscroll>
				</control>
				
			</control>	

			<!--Fanart Background Area-->
			<include>BG_Fanart_644</include>

        </control>
		
    </include>
	
</includes>
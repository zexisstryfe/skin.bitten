<?xml version="1.0" encoding="UTF-8"?>

<window id="1102">
    <defaultcontrol always="true">9000</defaultcontrol>
    <onload condition="System.HasAddon(script.randomandlastitems) + Skin.HasSetting(ShowHistorySection_Video)">XBMC.RunScript(script.randomandlastitems,limit=10,method=Last,playlist=special://skin/playlists/History (TV Shows).xsp,menu=Menu2)</onload>
    <onload condition="System.HasAddon(script.tv.show.next.aired) + Skin.HasSetting(ShowAiringTodaySection_Video)">XBMC.RunScript(script.tv.show.next.aired,backend=True)</onload>
    <onload condition="System.HasAddon(script.extendedinfo) + Skin.HasSetting(ShowTrendingSection_Video)">RunScript(script.extendedinfo,info=trendingshows)</onload>

    <controls>
        <include>HomeBackground</include>
		
		<control type="image">
			<animation type="WindowOpen">
				<effect type="slide" start="-500,0" end="0,0" center="auto" time="400" delay="200" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="-500,0" center="auto" time="400" delay="700" tween="cubic" easing="out" />
			</animation>			
			<description>White Backing</description>
			<width>500</width>
			<height>1080</height>
			<visible>true</visible>
			<texture border="2" colordiffuse="TrueWhite">colors/color_white.png</texture>
		</control>
		
		<include>Common_LeftBar</include>

		<control type="group">
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="500" delay="500" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="500" />
			</animation>	
		
			<control type="image">		
				<posx>25</posx>
				<posy>335</posy>
				<height>30</height>
				<width>30</width>
				<texture>arrows/default-scroll-up.png</texture>
				<visible>Container(9000).HasPrevious</visible>
			</control>	

			<control type="image">
				<posx>25</posx>
				<posy>970</posy>
				<height>30</height>
				<width>30</width>
				<texture>arrows/default-scroll-down.png</texture>
				<visible>Container(9000).HasNext</visible>
			</control>	

			<control type="panel" id="9000">
				<posy>390</posy>
				<width>455</width>
				<height>560</height>
				<onleft>9017</onleft>
				<onright>9001</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<itemlayout width="455" height="80">

					<control type="image">
						<include>Common_HomeMenu_Icons</include>
						<texture>$INFO[ListItem.Thumb]</texture>
					</control>
					
					<control type="label">
						<posx>110</posx>
						<label>$INFO[ListItem.Label]</label>
						<include>Common_HomeMenu_ListFont</include>
					</control>
					
				</itemlayout>
				
				<focusedlayout width="455" height="80">

					<control type="image">
						<include>Common_HomeMenu_Accent</include>
					</control>	
				
					<control type="image">
						<include>Common_HomeMenu_Icons</include>
						<texture>$INFO[ListItem.Thumb]</texture>
					</control>
					
					<control type="label">
						<posx>110</posx>
						<textcolor>$VAR[Accent_100]</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<include>Common_HomeMenu_ListFont</include>
					</control>
					
				</focusedlayout>

				<content>
					<item>
						<description>Now Playing</description>
						<label>$LOCALIZE[31226]</label>
						<thumb>hubmenu/play.png</thumb>
						<onclick>ActivateWindow(fullscreenvideo)</onclick>
						<visible>Player.HasVideo + VideoPlayer.Content(episodes)</visible>
					</item>
					<item>
						<description>Titles</description>
						<label>$LOCALIZE[31227]</label>
						<thumb>hubmenu/tv_title.png</thumb>
						<onclick>ActivateWindow(Videos,TvShowTitles,return)</onclick>
					</item>
					<item>
						<description>Recently Added</description>
						<label>$LOCALIZE[31009]</label>
						<thumb>hubmenu/recent.png</thumb>
						<onclick>ActivateWindow(Videos,RecentlyAddedEpisodes,return)</onclick>
					</item>
					<item>
						<description>Actors</description>
						<label>$LOCALIZE[344]</label>
						<thumb>hubmenu/actors.png</thumb>
						<onclick>ActivateWindow(Videos,TvShowActors,return)</onclick>
					</item>
					<item>
						<description>Genres</description>
						<label>$LOCALIZE[135]</label>
						<thumb>hubmenu/genres.png</thumb>
						<onclick>ActivateWindow(Videos,TvShowGenres,return)</onclick>
					</item>
					<item>
						<description>Years</description>
						<label>$LOCALIZE[652]</label>
						<thumb>hubmenu/years.png</thumb>
						<onclick>ActivateWindow(Videos,TvShowYears,return)</onclick>
					</item>
					<item>
						<description>Studios</description>
						<label>$LOCALIZE[20388]</label>
						<thumb>hubmenu/studios.png</thumb>
						<onclick>ActivateWindow(Videos,TvShowStudios,return)</onclick>
					</item>
					<item>
						<description>Playlists</description>
						<label>$LOCALIZE[136]</label>
						<thumb>hubmenu/playlists.png</thumb>
						<onclick>ActivateWindow(Videos,special://videoplaylists/,return)</onclick>
					</item>
					<item>
						<description>Addons</description>
						<label>$LOCALIZE[24001]</label>
						<thumb>hubmenu/addons.png</thumb>
						<onclick>ActivateWindow(Videos,addons://sources/video/,return)</onclick>
					</item>
					<item>
						<description>Files</description>
						<label>$LOCALIZE[744]</label>
						<thumb>hubmenu/files.png</thumb>
						<onclick>ActivateWindow(Videos,Files,return)</onclick>
					</item>
				</content>
				
			</control>
			
		</control>	
			
        <control type="grouplist">
			<posx>550</posx>
            <width>1370</width>
            <height>1050</height>
            <scrolltime tween="cubic" easing="out">600</scrolltime>
            <pagecontrol>9010</pagecontrol>
            <itemgap>90</itemgap>
            <orientation>horizontal</orientation>
            <include>Homescreen_Animation</include>

            <include>Hub_Featured</include>
            <include>Hub_RecentlyAdded</include>
            <include>Hub_AiringToday</include>
            <include>Hub_InCinemas</include>
            <include>Hub_NearbyEvents</include>
            <include>Hub_History</include>
            <include>Hub_Trakt</include>
        </control>
		
    </controls> 
	
</window>
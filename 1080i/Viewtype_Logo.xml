<?xml version="1.0" encoding="utf-8"?>

<includes>

    <include name="Viewtype_Logo">
	
        <control type="group">
            <visible>Control.IsVisible(58)</visible>
			
            <include>BG_Fanart_1080</include>

			<!--Details Area-->
			<control type="group">
				<visible>!stringcompare(ListItem.Label,..) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(sets)]</visible>
				<animation type="Conditional" condition="![Container(58).OnNext | Container(58).OnPrevious]">
					<effect type="slide" start="0,0" end="0,-340" time="400" tween="cubic" easing="in" delay="5000" />
				</animation>	
				<posx>80</posx>
				<posy>890</posy>
				
				<control type="image">
					<width>1920</width>
					<height>340</height>
					<include>Common_Color_BaseLow</include>
				</control> 
				
				<control type="image">
					<posy>280</posy>				
					<width>1920</width>
					<height>135</height>
					<include>Common_Color_BaseMediumHigh</include>
				</control>
				
				<control type="image" id="130">
					<width>227</width>
					<height>340</height>
					<aspectratio align="left" aligny="center">stretch</aspectratio>
					<texture fallback="DefaultVideo.png">$VAR[Fanart_Info_Icon]</texture>
					<visible>!IsEmpty(ListItem.Art(poster))</visible>
				</control>

				<control type="label" id="145">
					<posx>250</posx>
					<width>1160</width>
					<include>Common_Fanart_Title</include>
					<label>$VAR[Fanart_Info_Title]</label>
				</control>
				
				<control type="label">
					<posx>250</posx>
					<width>1160</width>
					<include>Common_Fanart_Subtitle</include>
				</control>
				
				<control type="image">
					<posx>260</posx>
					<posy>100</posy>
					<width>1550</width>
					<height>2</height>
					<include>Common_Color_BaseMediumHigh</include>
				</control>
				
				<control type="grouplist">
					<posx>1395</posx>
					<posy>20</posy>
					<width>420</width>
					<height>60</height>
					<itemgap>0</itemgap>
					<align>right</align>
					<orientation>horizontal</orientation>								
					
					<control type="group">
						<width>85</width>
						
						<control type="label">
							<width>85</width>
							<include>Common_Fanart_Label</include>
							<label>$LOCALIZE[345]</label>
						</control>
						
						<control type="label">
							<posy>30</posy>
							<width>85</width>
							<include>Common_Fanart_Data</include>
							<label>$INFO[ListItem.Year]</label>
						</control>
						
					</control>

					<control type="group">
						<width>120</width>
						<visible>Container.Content(tvshows)</visible>

						<control type="label">
							<width>120</width>
							<include>Common_Fanart_Label</include>
							<label>$LOCALIZE[33054]</label>
						</control>
						
						<control type="label">
							<posy>30</posy>
							<width>120</width>
							<include>Common_Fanart_Data</include>
							<label>$INFO[ListItem.Property(TotalSeasons)]</label>
						</control>
					
					</control>
					
					<control type="group">
						<width>140</width>

						<control type="label">
							<width>140</width>
							<include>Common_Fanart_Label</include>
							<label>$LOCALIZE[31193]</label>
						</control>
						
						<control type="image">
							<posy>30</posy>
							<width>140</width>
							<height>30</height>
							<texture colordiffuse="BaseMid">flags\ratings\rating5.png</texture>
							<align>center</align>
							<aspectratio>keep</aspectratio>
						</control>
						
						<control type="image">
							<posy>30</posy>
							<width>140</width>
							<height>30</height>
							<texture colordiffuse="BaseWhite">flags\ratings\$INFO[ListItem.Rating].png</texture>
							<align>center</align>
							<aspectratio>keep</aspectratio>
						</control>
					
					</control>
					
				</control>
				
				<control type="grouplist">
					<posx>260</posx>
					<posy>290</posy>
					<width>1600</width>
					<height>125</height>
					<itemgap>50</itemgap>
					<align>center</align>
					<orientation>horizontal</orientation>								

					<control type="group">						
						<width>100</width>
						<include>VideoMPAAFlaggingConditions</include>
					</control>
					
					<control type="group">
						<visible>!IsEmpty(ListItem.VideoResolution)</visible>
						<width>100</width>
						<include>VideoResolutionFlaggingConditions</include>
					</control>
					
					<control type="group">
						<visible>!IsEmpty(ListItem.VideoCodec)</visible>
						<width>100</width>
						<include>VideoCodecFlaggingConditions</include>
					</control>

					<control type="group">
						<visible>!IsEmpty(ListItem.VideoAspect)</visible>
						<width>100</width>
						<include>AspectCodecFlaggingConditions</include>
					</control>
					
					<control type="group">
						<visible>!IsEmpty(ListItem.AudioCodec)</visible>
						<width>100</width>
						<include>AudioCodecFlaggingConditions</include>
					</control>

					<control type="group">
						<visible>!IsEmpty(ListItem.AudioChannels)</visible>
						<width>100</width>
						<include>AudioChannelsFlaggingConditions</include>
					</control>
					
				</control>

				<control type="textbox">
					<posx>260</posx>
					<posy>110</posy>
					<width>1550</width>
					<height>150</height>
					<font>font26</font>
					<textcolor>BaseMediumHigh</textcolor>
					<align>justify</align>
					<label>$VAR[Common_Plot]</label>
					<autoscroll time="3000" delay="6000" repeat="8000"></autoscroll>
				</control>
				
			</control>	
			
			<!--Scrollbar-->
			<control type="scrollbar" id="580">
				<posx>80</posx>
				<posy>890</posy>
				<height>10</height>
				<width>1840</width>
				<include>ShowOptions_Up</include>
				<ondown>58</ondown>
				<orientation>horizontal</orientation>
			</control>
			
            <control type="image">
                <posy>900</posy>
                <width>1920</width>
                <height>180</height>
                <include>Common_Color_BaseWhite</include>
            </control>

			<!--List Area-->
            <control type="wraplist" id="58">
                <posx>15</posx>
                <posy>840</posy>
                <height>750</height>
                <width>1920</width>
                <onup>580</onup>
                <include>ShowOptions_Down</include>
                <pagecontrol>580</pagecontrol>
                <viewtype label="fanart- logo">list</viewtype>
                <orientation>horizontal</orientation>
                <focusposition>2</focusposition>
                <preloaditems>2</preloaditems>
                <visible>Container.Content(tvshows) | Container.Content(movies) | Container.Content(artists)</visible>
                <itemlayout width="375" height="338">
                    <control type="image">
						<visible>!stringcompare(ListItem.Label,..)</visible>
                        <posy>75</posy>
                        <width>345</width>
                        <height>134</height>
                        <texture background="true" fallback="tiles/unknown.png">$VAR[Common_Logo]</texture>
                        <animation effect="fade" start="40" end="40" time="0" condition="true">conditional</animation>
                        <aspectratio>keep</aspectratio>
                    </control>
					
                    <control type="image">
                        <visible>stringcompare(ListItem.Label,..)</visible>
                        <posy>75</posy>
                        <width>345</width>
                        <height>134</height>
                        <texture colordiffuse="BaseMediumHigh">DefaultFolderBack.png</texture>
                        <animation effect="fade" start="40" end="40" time="0" condition="true">conditional</animation>
                        <aspectratio>keep</aspectratio>
                    </control>
					
                    <control type="image">
                        <posx>292</posx>
                        <posy>82</posy>
                        <height>45</height>
                        <width>45</width>
                        <texture>watched/lg_check.png</texture>
                        <visible>[Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(episodes) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(seasons) + stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
                        <animation effect="fade" start="40" end="40" time="0" condition="true">conditional</animation>
                    </control>
					
                </itemlayout>
				
                <focusedlayout width="420" height="1928">
				
                    <control type="image">
						<visible>!stringcompare(ListItem.Label,..)</visible>
                        <posx>30</posx>
                        <posy>75</posy>
                        <width>345</width>
                        <height>134</height>
                        <texture background="true" fallback="tiles/unknown.png">$VAR[Common_Logo]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
					
                    <control type="image">
                        <visible>stringcompare(ListItem.Label,..)</visible>
                        <posx>30</posx>
                        <posy>75</posy>
                        <width>345</width>
                        <height>134</height>
                        <texture colordiffuse="BaseMediumHigh">DefaultFolderBack.png</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
					
                    <control type="image">
                        <posx>322</posx>
                        <posy>82</posy>
                        <height>45</height>
                        <width>45</width>
                        <texture>watched/lg_check.png</texture>
                        <visible>[Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(episodes) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(seasons) + stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
                    </control>
					
                </focusedlayout>
				
            </control>
						

        </control>
		
    </include>
	
</includes>
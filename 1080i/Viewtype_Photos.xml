<?xml version="1.0" encoding="utf-8"?>

<includes>

    <include name="Viewtype_Photos">
	
        <control type="group">
            <visible>Control.IsVisible(55)</visible>
			
            <include>BG_Fanart_1080</include>
			<include>FanartOverlay</include>
			
			<control type="group">			
					<posy>310</posy>
					
				<control type="image">	
					<include>Common_Animation_CenterMenu_Stage2</include>
					<width>1920</width>
					<height>690</height>
					<texture colordiffuse="BaseMid">colors/color_white.png</texture>			
				</control>	

				<control type="panel" id="55">
					<include>Common_Animation_CenterMenu_Stage3</include>
					<viewtype label="polaroids">tiles</viewtype>
					<posx>225</posx>
					<posy>10</posy> 
					<width>1800</width>
					<height>720</height>
					<orientation>horizontal</orientation>
					<include>ShowOptions_Up</include>
					<ondown>62</ondown>
					<pagecontrol>62</pagecontrol>
					<preloaditems>2</preloaditems>
					<visible>Window.IsActive(pictures)</visible>
					<itemlayout width="288" height="340">
					
						<control type="image">
							<posx>14</posx>
							<width>278</width>
							<height>330</height>
							<texture background="true" border="2">backings/polaroid.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						
						<control type="image">
							<posx>28</posx>
							<posy>15</posy>
							<width>248</width>
							<height>232</height>
							<aspectratio align="left" aligny="center">scale</aspectratio>
							<texture fallback="$VAR[Common_Fallback]">$INFO[ListItem.Icon]</texture>
						</control>
						
						<control type="textbox">
							<label>$VAR[Fanart_Info_Title]</label>
							<posx>38</posx>
							<posy>255</posy>
							<height>75</height>
							<width>225</width>
							<font>scrawl28</font>
							<textcolor>BaseMediumHigh</textcolor>
							<align>center</align>
						</control>

					</itemlayout>
					
					<focusedlayout width="288" height="340">
					
						<control type="group">
							<animation type="Focus" reversible="false">
								<effect type="zoom" center="auto" start="100" end="105" time="300" tween="back" easing="out" />
							</animation>
							
							<control type="image">
								<posx>21</posx>
								<width>278</width>
								<height>330</height>
								<texture>backings/polaroid.png</texture>
								<aspectratio scalediffuse="false">stretch</aspectratio>
							</control>

							<control type="image">
								<posx>36</posx>
								<posy>15</posy>
								<width>248</width>
								<height>232</height>
								<aspectratio align="left" aligny="center">scale</aspectratio>
								<texture fallback="$VAR[Common_Fallback]">$INFO[ListItem.Icon]</texture>
							</control>
							
							<control type="textbox">
								<label>$VAR[Fanart_Info_Title]</label>
								<posx>38</posx>
								<posy>255</posy>
								<height>75</height>
								<width>225</width>
								<font>scrawl28</font>
								<textcolor>BaseMediumHigh</textcolor>
								<align>center</align>
							</control>

						</control>
						
					</focusedlayout>
					
				</control>
				
				<!--Scrollbar-->
				<control type="scrollbar" id="62">
					<posx>80</posx>
					<posy>680</posy>
					<width>1840</width>
					<height>10</height>
					<onup>591</onup>
					<include>ShowOptions_Down</include>
					<showonepage>false</showonepage>
					<orientation>horizontal</orientation>
				</control>
				
			</control>	
			
        </control>
		
    </include>
	
</includes>
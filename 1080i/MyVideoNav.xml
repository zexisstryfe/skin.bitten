            <include>Viewtype_Thumbnail</include>
            <!-- ID 591 -->
        </control>
		
        <!--NextAired Notification-->
        <include>Common_TVGuide_Notification</include>
		
        <!--Options Menu-->
        <include>Common_Options</include>
        <include>Common_Options_Clock</include>
		
        <!--Sort Overlays-->
        <include>Sort_Panel</include>

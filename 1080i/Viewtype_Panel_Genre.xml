<?xml version="1.0" encoding="utf-8"?>

<includes>

    <include name="Viewtype_Panel_Genre">
	
        <control type="group">
            <visible>Control.IsVisible(56)</visible>

			
			<!--Scrollbar-->
			<control type="scrollbar" id="62">
				<posx>1225</posx>
				<height>1080</height>
				<width>10</width>
				<include>ShowOptions_Left</include>
				<onright>51</onright>
			</control>	
			<!--Panel Area-->
            <control type="group">
				<posx>1235</posx>
                <include>Animation_Slide_Right</include>

				<control type="image">                  
                    <width>685</width> 
                    <height>1080</height>
                    <include>Common_Color_BaseWhite</include>
                </control>

                <control type="panel" id="56">
					<visible>Container.Content(genres)</visible>
					<width>687</width>
                    <height>1080</height>
                    <scrolltime>300</scrolltime>
                    <orientation>vertical</orientation>
                    <viewtype label="genre panel">panel</viewtype>
                    <onleft>66</onleft>
                    <include>ShowOptions_Right</include>
                    <preloaditems>3</preloaditems>
                    <pagecontrol>62</pagecontrol>
                    <itemlayout width="229" height="277">
						
						<control type="image">								
							<width>227</width>
							<height>227</height>
							<include>Common_Color_BaseMediumHigh</include>
							<aspectratio scalediffuse="false">stretch</aspectratio>								
						</control>
						
						<control type="image">
							<width>227</width>
							<height>227</height>
							<texture>$VAR[Common_Fallback]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
						</control>
						
						<control type="image">
							<width>227</width>
							<height>227</height>
							<texture background="true" fallback="tiles/unknown.png">../extras/genres/$INFO[ListItem.Label].png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!stringcompare(ListItem.Label,..)</visible>
						</control>

						<control type="label">
							<posx>10</posx>
							<posy>227</posy>
							<width>215</width>
							<height>50</height>
							<aligny>center</aligny>
							<font>font20R</font>
							<label>$VAR[Fanart_List_Title]</label>
							<textcolor>BaseMediumHigh</textcolor>
						</control>
						
                    </itemlayout>
					
                    <focusedlayout width="229" height="277">

						<control type="image">
							<width>227</width>
							<height>277</height>
							<include>Common_Color_Accent</include>
						</control>

						<control type="image">								
							<width>227</width>
							<height>227</height>
							<include>Common_Color_BaseMid</include>
							<aspectratio scalediffuse="false">stretch</aspectratio>								
						</control>
						
						<control type="image">
							<width>227</width>
							<height>227</height>
							<texture>$VAR[Common_Fallback]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
						</control>
						
						<control type="image">
							<width>227</width>
							<height>227</height>
							<texture background="true" fallback="tiles/unknown.png">../extras/genres/$INFO[ListItem.Label].png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!stringcompare(ListItem.Label,..)</visible>
						</control>

						<control type="label">
							<posx>10</posx>
							<posy>227</posy>
							<width>215</width>
							<height>50</height>
							<aligny>center</aligny>
							<font>font20R</font>
							<label>$VAR[Fanart_List_Title]</label>
						</control>

                    </focusedlayout>
					
                </control>
				
            </control>
			
			<!--Info Area-->
            <control type="group">
				<posy>654</posy>
				<posx>80</posx>
			
				<control type="image">					
					<width>1145</width>
					<height>430</height>
					<include>Common_Color_BaseLow</include>
				</control>

				<control type="image">
					<posy>366</posy>
					<width>1145</width>
					<height>60</height>
					<include>Common_Color_BaseMediumHigh</include>
				</control>
				
				<control type="label">
					<posx>30</posx>
					<width>840</width>
					<include>Common_Fanart_Fadelabel</include>
					<label>$VAR[Fanart_Info_Title]</label>
				</control>

				<control type="image">
					<posx>40</posx>
					<posy>100</posy>
					<width>1065</width>
					<height>2</height>
					<include>Common_Color_BaseMediumHigh</include>
				</control>

				<control type="textbox">
					<posx>40</posx>
					<posy>110</posy>
					<width>1065</width>
					<height>240</height>
					<font>font26</font>
					<textcolor>BaseMediumHigh</textcolor>
					<align>justify</align>
					<label>$VAR[Common_Plot]</label>
					<autoscroll time="3000" delay="6000" repeat="8000"></autoscroll>
				</control>
				
			</control>	

			<!--Fanart Background Area-->
			<include>BG_Fanart_644</include>

        </control>

    </include>
	
</includes>
<?xml version="1.0" encoding="utf-8"?>

<includes>

    <include name="EPGTimelineView">
	
        <control type="group">

            <description>TV Guide Timeline</description>
            <visible>Control.IsVisible(10)</visible>
			
            <control type="image">
				<include>Common_Animation_CenterMenu_Stage2</include>
                <posy>180</posy>
                <width>1920</width>
                <height>840</height>
                <texture colordiffuse="BaseMid">colors/color_white.png</texture>
            </control>
			
			<control type="group">
				<include>Common_Animation_PVR</include>
				<posy>185</posy>
				<posx>114</posx> 
			
				<control type="label">
					<width>900</width>
					<height>50</height>
					<font>font50B</font>
					<label>$INFO[Control.GetLabel(29),[COLOR White]$LOCALIZE[31084] [/COLOR]]</label>
					<textcolor>$VAR[Accent_100]</textcolor>
				</control>
				
				<control type="label">
					<posx>478</posx>
					<width>900</width>
					<height>50</height>
					<font>font50B</font>
					<label>$INFO[Control.GetLabel(30),[COLOR White]$LOCALIZE[31178]: [/COLOR]]</label>
					<textcolor>$VAR[Accent_100]</textcolor>
				</control>
				
				<control type="image">
					<posy>65</posy>
					<width>1920</width>
					<height>60</height>
					<texture colordiffuse="BaseWhite">colors/color_white.png</texture>
				</control>
				
				<control type="image">
					<posy>125</posy>
					<width>1920</width>
					<height>525</height>
					<texture colordiffuse="BaseLow">colors/color_white.png</texture>
				</control>
				
				<control type="epggrid" id="10">
					<description>EPG Grid</description>
					<posy>65</posy>
					<width>1806</width>
					<height>585</height>
					<progresstexture border="10">general/progressline.png</progresstexture>
					<timeblocks>20</timeblocks>
					<rulerunit>6</rulerunit>
					<include>ShowOptions_Left</include>
					<include>ShowOptions_Right</include>
					<onup>10</onup>
					<ondown>10</ondown>
					<rulerlayout height="60" width="60">
					
						<control type="label" id="2">
							<font>font30R</font>
							<textcolor>BaseMediumHigh</textcolor>
							<label>   $INFO[ListItem.Label]</label>
						</control>
						
					</rulerlayout>
					
					<channellayout height="75" width="366">
						<animation effect="fade" start="110" time="200">OnFocus</animation>
						
						<control type="image">
							<posx>10</posx>
							<posy>10</posy>
							<width>55</width>
							<height>55</height>
							<texture>backings/circle.png</texture>
						</control>

						<control type="label">
							<posx>10</posx>
							<posy>10</posy>
							<width>55</width>
							<height>55</height>
							<align>center</align>
							<font>font26B</font>
							<label>$INFO[ListItem.ChannelNumber]</label>
						</control>
						
						<control type="label">
							<posx>85</posx>
							<width>280</width>
							<height>75</height>
							<font>font30B</font>
							<textcolor>BaseMediumHigh</textcolor>
							<label>$INFO[ListItem.ChannelName]</label>
						</control>

					</channellayout>
					
					<focusedchannellayout height="75" width="366">
						<animation effect="fade" start="110" time="200">OnFocus</animation>
						
						<control type="image">
							<width>366</width>
							<height>75</height>
							<include>Common_Color_Accent</include>
						</control>

						<control type="image">
							<posx>10</posx>
							<posy>10</posy>
							<width>55</width>
							<height>55</height>
							<texture diffuse="masks/circle.png">colors/color_white.png</texture>
						</control>

						<control type="label">
							<posx>10</posx>
							<posy>10</posy>
							<width>55</width>
							<height>55</height>
							<align>center</align>
							<font>font26B</font>
							<textcolor>BaseMediumHigh</textcolor>
							<label>$INFO[ListItem.ChannelNumber]</label>
						</control>
						
						<control type="label">
							<posx>85</posx>
							<width>280</width>
							<height>75</height>
							<font>font30B</font>
							<label>$INFO[ListItem.ChannelName]</label>
						</control>
						
					</focusedchannellayout>
					
					<itemlayout height="75" width="215">
					
						<control type="image" id="2">
							<posx>5</posx>
							<width>210</width>
							<height>73</height>
							<texture fallback="colors\color_black.png">pvrgenre/$INFO[ListItem.Property(GenreType)].png</texture>
							<aspectratio>scale</aspectratio>
						</control>
						
						<control type="image" id="2">
							<posx>5</posx>
							<width>210</width>
							<height>73</height>
							<aspectratio>stretch</aspectratio>
							<texture border="5">colors/color_maroon.png</texture>
							<visible>ListItem.IsRecording</visible>
						</control>
						
						<control type="label" id="1">
							<posx>35</posx>
							<height>73</height>
							<width>180</width>
							<font>font26R</font>
							<info>ListItem.Label</info>
						</control>
						
						<control type="image">
							<posx>5</posx>
							<posy>22</posy>
							<width>30</width>
							<height>30</height>
							<texture>tiles/recordings.png</texture>
							<visible>ListItem.IsRecording</visible>
						</control>
						
						<control type="image">
							<posx>5</posx>
							<posy>22</posy>
							<width>30</width>
							<height>30</height>
							<texture>tiles/recent.png</texture>
							<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
						</control>
						
					</itemlayout>
					
					<focusedlayout height="75" width="215">
					
						<control type="image" id="2">
							<posx>5</posx>
							<width>210</width>
							<height>73</height>
							<include>Common_Color_Accent</include>
						</control>
						
						<control type="label" id="1">
							<posx>35</posx>
							<width>180</width>
							<height>73</height>
							<font>font26R</font>
							<label>$INFO[ListItem.Label]</label>
						</control>
						
						<control type="image">
							<posx>5</posx>
							<posy>22</posy>
							<width>30</width>
							<height>30</height>
							<texture>tiles/recordings.png</texture>
							<visible>ListItem.IsRecording</visible>
						</control>
						
						<control type="image">
							<posx>5</posx>
							<posy>22</posy>
							<width>30</width>
							<height>30</height>
							<texture>tiles/recent.png</texture>
							<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
						</control>
						
					</focusedlayout>
					
				</control>
				
				<control type="group">
					<posy>650</posy>
					
					<control type="image">
						<width>1806</width>
						<height>175</height>
						<texture colordiffuse="BaseWhite">colors/color_white.png</texture>
					</control>
					
					<control type="image">
						<posx>15</posx>
						<posy>15</posy>
						<width>145</width>
						<height>145</height>
						<include>Common_Color_BaseMediumHigh</include>
					</control>
					
					<control type="image">
						<posx>15</posx>
						<posy>15</posy>
						<width>145</width>
						<height>145</height>
						<texture fallback="DefaultVideo.png" background="true">$INFO[ListItem.Icon]</texture>
					</control>
					
					<control type="fadelabel">
						<label>$INFO[ListItem.Title]</label>
						<posx>200</posx>
						<height>45</height>
						<width>1190</width>
						<font>font45R</font>
						<scroll>true</scroll>
						<pauseatend>600</pauseatend>
						<scrollspeed>50</scrollspeed>
						<aligny>top</aligny>
						<textcolor>$VAR[Accent_100]</textcolor>
					</control>
					
					<control type="label">
						<posx>1775</posx>
						<width>450</width>
						<height>45</height>
						<font>font34B</font>
						<align>right</align>
						<textcolor>BaseMediumHigh</textcolor>
						<label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
					</control>
					
					<control type="label">
						<posx>200</posx>
						<posy>50</posy>
						<width>1118</width>
						<height>30</height>
						<font>font24B</font>
						<textcolor>BaseMediumHigh</textcolor>
						<label>$INFO[ListItem.Genre]</label>
					</control>
					
					<control type="image">
						<posx>220</posx>
						<posy>85</posy>
						<width>1566</width>
						<height>2</height>
						<include>Common_Color_BaseMediumHigh</include>
					</control>
					
					<control type="textbox">
						<posx>220</posx>
						<posy>90</posy>
						<width>1566</width>
						<height>75</height>
						<align>justify</align>
						<autoscroll time="3000" delay="6000" repeat="8000"></autoscroll>
						<font>font30</font>
						<textcolor>BaseMediumHigh</textcolor>
						<label>$INFO[ListItem.Plot]</label>
					</control>
					
				</control>
				
			</control>	
			
        </control>
		
    </include>
	
</includes>
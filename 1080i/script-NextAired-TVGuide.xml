                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[Container(203).ListItem.Property(Fanart)]</texture>
                    <visible>Control.HasFocus(203) | !IsEmpty(Window(Home).property(TVGuide.ThursdayList))</visible>
                    <fadetime>600</fadetime>
                    <animation effect="fade" time="600">Visible</animation>
                    <animation effect="fade" time="600">Hidden</animation>
                </control>
                <control type="image">
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[Container(204).ListItem.Property(Fanart)]</texture>
                    <visible>Control.HasFocus(204) | !IsEmpty(Window(Home).property(TVGuide.FridayList))</visible>
                    <fadetime>600</fadetime>
                    <animation effect="fade" time="600">Visible</animation>
                    <animation effect="fade" time="600">Hidden</animation>
                </control>
                <control type="image">
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[Container(205).ListItem.Property(Fanart)]</texture>
                    <visible>Control.HasFocus(205) | !IsEmpty(Window(Home).property(TVGuide.SaturdayList))</visible>
                    <animation effect="fade" time="600">Visible</animation>
                    <animation effect="fade" time="600">Hidden</animation>
                </control>
                <control type="image">
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[Container(206).ListItem.Property(Fanart)]</texture>
                    <visible>Control.HasFocus(206) | !IsEmpty(Window(Home).property(TVGuide.SundayList))</visible>
                    <fadetime>600</fadetime>
                    <animation effect="fade" time="600">Visible</animation>
                    <animation effect="fade" time="600">Hidden</animation>
                </control>
            </control>
        </control>

		<include>FanartOverlay</include>		
		
		<control type="group">
			<animation type="WindowOpen">
				<effect type="slide" start="1920,0" end="0,0" center="auto" time="400" delay="200" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="1920,0" center="auto" time="400" delay="700" tween="cubic" easing="out" />
			</animation>
		

			<control type="label">
				<label>$LOCALIZE[31129]</label>
				<posx>585</posx>
				<posy>395</posy>
				<height>60</height>
				<width>525</width>
				<font>font45R</font>
				<textcolor>BaseMediumHigh</textcolor>
			</control>	

		</control>	
		
		<include>TVGuide_Sidebars</include>	

        <!--Panel-->
        <control type="group">
            <posy>150</posy>
            <width>1920</width>
            <height>720</height>
            <animation type="WindowOpen" condition="!Window.Previous(fullscreenvideo) + !Window.Previous(slideshow)">
                <effect type="fade" start="0" end="100" time="400" />
                <effect type="slide" start="1920,0" end="0,0" center="auto" time="600" delay="200" tween="back" easing="out" />
            </animation>
            <animation type="WindowOpen" condition="Window.Previous(fullscreenvideo) | Window.Previous(slideshow)">
                <effect type="fade" start="0" end="100" time="400" />
                <effect type="slide" start="1920,0" end="0,0" center="auto" time="600" delay="400" tween="back" easing="out" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="400" />
                <effect type="slide" start="0,0" end="1920,0" center="auto" time="400" />
            </animation>
			
            <control type="group">
                <posx>465</posx>
                <width>1920</width>
                <height>720</height>

                <control type="label">
                    <posx>90</posx>
                    <posy>315</posy>
                    <width>1200</width>
                    <height>60</height>
                    <label>31206</label>
                    <font>font34R</font>
                    <visible>[IsEmpty(Container(200).ListItem(0).Label) + StringCompare(Container(50).Position,0)] | [IsEmpty(Container(201).ListItem(0).Label) + StringCompare(Container(50).Position,1)] | [IsEmpty(Container(202).ListItem(0).Label) + StringCompare(Container(50).Position,2)] | [IsEmpty(Container(203).ListItem(0).Label) + StringCompare(Container(50).Position,3)] | [IsEmpty(Container(204).ListItem(0).Label) + StringCompare(Container(50).Position,4)] | [IsEmpty(Container(205).ListItem(0).Label) + StringCompare(Container(50).Position,5)] | [IsEmpty(Container(206).ListItem(0).Label) + StringCompare(Container(50).Position,6)]</visible>
                </control>
				
                <!--Monday-->
                <control type="group">
                    <width>1920</width>
                    <height>720</height>
                    <visible>!IsEmpty(Container(200).ListItem(0).Label) + StringCompare(Container(50).Position,0)</visible>
					
                    <control type="fixedlist" id="200">
                        <onright>201</onright>
                        <include name="TVGuide_FixedList">
							<param name="control" value="200"/>
						</include>
                    </control>
					
                </control>
				
                <!--Tuesday-->
                <control type="group">
                    <width>1920</width>
                    <height>720</height>
                    <visible>!IsEmpty(Container(201).ListItem(0).Label) + StringCompare(Container(50).Position,1)</visible>
					
                    <control type="fixedlist" id="201">
                        <onright>201</onright>
                        <include name="TVGuide_FixedList">
							<param name="control" value="201"/>
						</include>
                    </control>
					
                </control>
				
                <!--Wednesday-->
                <control type="group">
                    <width>1920</width>
                    <height>720</height>
                    <visible>!IsEmpty(Container(202).ListItem(0).Label) + StringCompare(Container(50).Position,2)</visible>
					
                    <control type="fixedlist" id="202">
                        <onright>202</onright>
                        <include name="TVGuide_FixedList">
							<param name="control" value="202"/>
						</include>
                    </control>
					
                </control>
				
                <!--Thursday-->
                <control type="group">
                    <width>1920</width>
                    <height>720</height>
                    <visible>!IsEmpty(Container(203).ListItem(0).Label) + StringCompare(Container(50).Position,3)</visible>
					
                    <control type="fixedlist" id="203">
                        <onright>203</onright>
                        <include name="TVGuide_FixedList">
							<param name="control" value="203"/>
						</include>
                    </control>
					
                </control>
				
                <!--Friday-->
                <control type="group">
                    <width>1920</width>
                    <height>720</height>
                    <visible>!IsEmpty(Container(204).ListItem(0).Label) + StringCompare(Container(50).Position,4)</visible>
					
                    <control type="fixedlist" id="204">
                        <onright>204</onright>
                        <include name="TVGuide_FixedList">
							<param name="control" value="204"/>
						</include>
                    </control>
					
                </control>
				
                <!--Saturday-->
                <control type="group">
                    <width>1920</width>
                    <height>720</height>
                    <visible>!IsEmpty(Container(205).ListItem(0).Label) + StringCompare(Container(50).Position,5)</visible>
					
                    <control type="fixedlist" id="205">
                        <onright>205</onright>
						<onfocus>SetFocus(Container(50).Position(5))</onfocus>
                        <include name="TVGuide_FixedList">
							<param name="control" value="205"/>
						</include>
                    </control>
					
                </control>
				
                <!--Sunday-->
                <control type="group">
                    <width>1920</width>
                    <height>720</height>
                    <visible>!IsEmpty(Container(206).ListItem(0).Label) + StringCompare(Container(50).Position,6)</visible>
					
                    <control type="fixedlist" id="206">
                        <onright>206</onright>
                        <include name="TVGuide_FixedList">
							<param name="control" value="206"/>
						</include>
                    </control>
					
                </control>
				
            </control>
			
        </control>
		
        <!--Options Menu-->
        <include>Common_Options</include>
        <include>Common_Options_Clock</include>		
				
        <!--Content Area-->
		<control type="group">
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="500" delay="500" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="500" />
			</animation>	

			<control type="list" id="50">
				<animation type="Visible">
					<effect type="fade" start="0" end="100" time="500" delay="500" />
				</animation>
				<posy>390</posy>
				<width>455</width>
				<height>560</height>
				<visible allowhiddenfocus="true">![Control.HasFocus(8) | Control.HasFocus(9)]</visible>
				<include>ShowOptions_Left</include>
				<onright condition="StringCompare(Container(50).Position,0)">200</onright>
				<onright condition="StringCompare(Container(50).Position,1)">201</onright>
				<onright condition="StringCompare(Container(50).Position,2)">202</onright>
				<onright condition="StringCompare(Container(50).Position,3)">203</onright>
				<onright condition="StringCompare(Container(50).Position,4)">204</onright>
				<onright condition="StringCompare(Container(50).Position,5)">205</onright>
				<onright condition="StringCompare(Container(50).Position,6)">206</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<itemlayout width="455" height="80">
				
					<control type="image">
						<include>Common_HomeMenu_Icons</include>
						<texture>arrows/right.png</texture>
						<visible>StringCompare(ListItem.Label,System.Date(DDD))</visible>
					</control>	
					
					<control type="label">
						<posx>110</posx>
						<include>Common_HomeMenu_ListFont</include>
						<label>$INFO[ListItem.Label]</label>
					</control>
					
				</itemlayout>
				
				<focusedlayout width="455" height="80">

					<control type="image">
						<include>Common_HomeMenu_Accent</include>
					</control>	
				
					<control type="image">
						<include>Common_HomeMenu_Icons</include>
						<texture>arrows/right.png</texture>
						<visible>StringCompare(ListItem.Label,System.Date(DDD))</visible>
					</control>	
					
					<control type="label">
						<posx>110</posx>
						<textcolor>$VAR[Accent_100]</textcolor>
						<include>Common_HomeMenu_ListFont</include>
						<label>$INFO[ListItem.Label]</label>
					</control>
					
				</focusedlayout>
				
				<content>
					<item id="1">
						<label>$INFO[Window(home).Property(NextAired.200.Weekday)]</label>
						<onclick>Control.SetFocus(200)</onclick>
					</item>	
					<item id="2">
						<label>$INFO[Window(home).Property(NextAired.201.Weekday)]</label>
						<onclick>Control.SetFocus(201)</onclick>
					</item>
					<item id="3">
						<label>$INFO[Window(home).Property(NextAired.202.Weekday)]</label>
						<onclick>Control.SetFocus(202)</onclick>
					</item>
					<item id="4">
						<label>$INFO[Window(home).Property(NextAired.203.Weekday)]</label>
						<onclick>Control.SetFocus(203)</onclick>
					</item>
					<item id="5">
						<label>$INFO[Window(home).Property(NextAired.204.Weekday)]</label>
						<onclick>Control.SetFocus(204)</onclick>
					</item>
					<item id="6">
						<label>$INFO[Window(home).Property(NextAired.205.Weekday)]</label>
						<onclick>Control.SetFocus(205)</onclick>
					</item>
					<item id="7">
						<label>$INFO[Window(home).Property(NextAired.206.Weekday)]</label>
						<onclick>Control.SetFocus(206)</onclick>
					</item>
				</content>
				
			</control>

		</control>
		
    </controls>
	
	<onload>Left</onload>
	

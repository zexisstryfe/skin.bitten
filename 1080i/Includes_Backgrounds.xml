        </control>

        <control type="image">
            <include>Dimensions_Fullscreen</include>
            <texture colordiffuse="BaseMid">colors/color_white.png</texture>
            <visible>Container.Content(movies) + IsEmpty(ListItem.Art(fanart))</visible>

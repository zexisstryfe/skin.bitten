<?xml version="1.0" encoding="UTF-8"?>

<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	<menucontrol>9051</menucontrol>
	<onload>SetProperty(Window.HasSettings,True,home)</onload>
	<onload>ClearProperty(MediaMenu,Home)</onload>
	<onunload>ClearProperty(Window.HasSettings,Home)</onunload>

    <controls>
        <include>BG_Fanart_1080</include>
		<include>WhiteOverlay</include>

		<control type="group">
			<posy>200</posy>

			<include>Settings_GrayBand</include>

			<!-- view id = 50 -->
			<control type="group">	
				<posy>10</posy>
				<visible>Control.IsVisible(50) + !Window.IsActive(addoninformation)</visible>
			
				<control type="image">	
					<include>Common_Animation_CenterMenu_Stage2</include>
					<width>1920</width>
					<height>780</height>
					<texture colordiffuse="BaseWhite">colors/color_white.png</texture>			
				</control>

				<control type="image">	
					<include>Common_Animation_CenterMenu_Stage2</include>
					<posy>20</posy>
					<posx>300</posx>
					<width>1320</width>
					<height>740</height>
					<texture colordiffuse="BaseLow">colors/color_white.png</texture>			
				</control>

				<control type="group">	
					<posy>20</posy>
					<posx>300</posx>
			        <animation type="WindowOpen">
			            <effect type="fade" start="0" end="100" time="400" delay="1800"/>
			        </animation>
			        <animation type="WindowClose">
			            <effect type="fade" start="100" end="0" time="600" />
			        </animation>

					<control type="list" id="50">
						<width>1320</width>
						<height>740</height>
						<onleft>SetProperty(MediaMenu,True,home)</onleft>
						<onleft>SetFocus(9100)</onleft>
						<onright>60</onright>
						<viewtype label="535">list</viewtype>
						<pagecontrol>60</pagecontrol>
						<scrolltime tween="quadratic" easing="out">200</scrolltime>
						<itemlayout height="120" width="1320">

							<control type="image">
								<posy>10</posy>
								<posx>10</posx>
								<width>100</width>
								<height>100</height>
								<aspectratio>keep</aspectratio>
								<bordertexture colordiffuse="BaseMediumHigh">colors/color_white.png</bordertexture>
								<texture background="true">$INFO[ListItem.Icon,views/list/]</texture>
								<visible>SubString(ListItem.Icon,Default,left)</visible>
							</control>

							<control type="image">
								<posy>10</posy>
								<posx>10</posx>
								<width>100</width>
								<height>100</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<visible>!SubString(ListItem.Icon,Default,left)</visible>
							</control>

							<control type="label">
								<posy>10</posy>
								<posx>130</posx>
								<width>1180</width>
								<height>50</height>
								<font>font24B</font>
								<textcolor>BaseMediumHigh</textcolor>
								<aligny>center</aligny>
								<label>$INFO[ListItem.Label]</label>
							</control>

							<control type="label">
								<posy>60</posy>
								<posx>130</posx>
								<width>1565</width>
								<height>50</height>
								<font>font18R</font>
								<textcolor>BaseMid</textcolor>
								<aligny>center</aligny>
								<label>$INFO[ListItem.Property(Event.Description)]</label>
							</control>

							<control type="label">
								<posy>10</posy>
								<posx>130</posx>								
								<width>1170</width>
								<height>100</height>
								<font>font18R</font>
								<align>right</align>
								<textcolor>BaseMid</textcolor>
								<aligny>center</aligny>
								<label>$INFO[ListItem.Label2]</label>
							</control>

						</itemlayout>

						<focusedlayout height="120" width="1320">

	                        <control type="image">
	                            <width>1320</width>
	                            <height>120</height>
	                            <include>Common_Color_Accent</include>
	                            <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
	                        </control>

							<control type="image">
								<posy>10</posy>
								<posx>10</posx>
								<width>100</width>
								<height>100</height>
								<aspectratio>keep</aspectratio>
								<bordertexture colordiffuse="BaseMediumHigh">colors/color_white.png</bordertexture>
								<texture background="true">$INFO[ListItem.Icon,views/list/]</texture>
								<visible>SubString(ListItem.Icon,Default,left)</visible>
							</control>

							<control type="image">
								<posy>10</posy>
								<posx>10</posx>
								<width>100</width>
								<height>100</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<visible>!SubString(ListItem.Icon,Default,left)</visible>
							</control>

							<control type="label">
								<posy>10</posy>
								<posx>130</posx>
								<width>1180</width>
								<height>50</height>
								<font>font24B</font>
								<aligny>center</aligny>
								<label>$INFO[ListItem.Label]</label>
							</control>

							<control type="label">
								<posy>60</posy>
								<posx>130</posx>
								<width>1565</width>
								<height>50</height>
								<font>font18R</font>
								<textcolor>BaseLow</textcolor>
								<aligny>center</aligny>
								<label>$INFO[ListItem.Property(Event.Description)]</label>
							</control>

							<control type="label">
								<posy>10</posy>
								<posx>130</posx>								
								<width>1170</width>
								<height>100</height>
								<font>font18R</font>
								<align>right</align>
								<textcolor>BaseLow</textcolor>
								<aligny>center</aligny>
								<label>$INFO[ListItem.Label2]</label>
							</control>

						</focusedlayout>

					</control>

					<control type="scrollbar" id="60">
						<posx>1310</posx>
						<width>10</width>
						<height>740</height>
						<onleft>50</onleft>
						<onright>9002</onright>
					</control>

				</control>

			</control>

		</control>

		<include>Common_LeftBar</include>

		<!--Options Menu-->
        <include>Common_Options</include>
        <include>Common_Options_Clock</include>

	</controls>

</window>
<?xml version="1.0" encoding="UTF-8"?>

<window id="1101">
    <defaultcontrol always="true">9000</defaultcontrol>
    <onload condition="System.HasAddon(script.randomandlastitems) + Skin.HasSetting(ShowHistorySection_Video)">XBMC.RunScript(script.randomandlastitems,limit=10,method=Last,playlist=special://skin/playlists/History (Movies).xsp,menu=Menu1)</onload>
    <onload condition="System.HasAddon(script.extendedinfo) + Skin.HasSetting(ShowInCinemasSection_Video)">RunScript(script.extendedinfo,info=intheatermovies)</onload>
    <onload condition="System.HasAddon(script.extendedinfo) + Skin.HasSetting(ShowTrendingSection_Video)">RunScript(script.extendedinfo,info=trendingmovies)</onload>

    <controls>
        <include>HomeBackground</include>

		<control type="image">
			<animation type="WindowOpen">
				<effect type="slide" start="-500,0" end="0,0" center="auto" time="400" delay="200" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="-500,0" center="auto" time="400" delay="700" tween="cubic" easing="out" />
			</animation>			
			<description>White Backing</description>
			<width>500</width>
			<height>1080</height>
			<visible>true</visible>
			<texture border="2" colordiffuse="TrueWhite">colors/color_white.png</texture>
		</control>	

		<include>Common_LeftBar</include>

		<control type="group">
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="500" delay="500" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="500" />
			</animation>	
		
			<control type="image">		
				<left>25</left>
				<top>335</top>
				<height>30</height>
				<width>30</width>
				<texture>arrows/default-scroll-up.png</texture>
				<visible>Container(9000).HasPrevious</visible>
			</control>	

			<control type="image">
				<left>25</left>
				<top>970</top>
				<height>30</height>
				<width>30</width>
				<texture>arrows/default-scroll-down.png</texture>
				<visible>Container(9000).HasNext</visible>
			</control>			

			<control type="panel" id="9000">
				<top>390</top>
				<width>455</width>
				<height>560</height>
				<onleft>9017</onleft>
				<onright>9001</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<itemlayout width="455" height="80">

					<control type="image">
						<include>Common_HomeMenu_Icons</include>
						<texture>$INFO[ListItem.Thumb]</texture>
					</control>
					
					<control type="label">
						<posx>110</posx>
						<label>$INFO[ListItem.Label]</label>
						<include>Common_HomeMenu_ListFont</include>
					</control>
					
				</itemlayout>
				
				<focusedlayout width="455" height="80">

					<control type="image">
						<include>Common_HomeMenu_Accent</include>
					</control>	
				
					<control type="image">
						<include>Common_HomeMenu_Icons</include>
						<texture>$INFO[ListItem.Thumb]</texture>
					</control>
					
					<control type="label">
						<posx>110</posx>
						<textcolor>$VAR[Accent_100]</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<include>Common_HomeMenu_ListFont</include>
					</control>
					
				</focusedlayout>
				
				<content>
					<item>
						<description>Now Playing</description>
						<label>$LOCALIZE[31226]</label>

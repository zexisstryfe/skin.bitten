						<thumb>hubmenu/studios.png</thumb>
						<onclick>ActivateWindow(Videos,MovieStudios,return)</onclick>
					</item>					
					<item>
						<description>Countries</description>
						<label>$LOCALIZE[20451]</label>
						<thumb>hubmenu/countries.png</thumb>
						<onclick>ActivateWindow(Videos,MovieCountries,return)</onclick>
					</item>
					<item>
						<description>Sets</description>
						<label>$LOCALIZE[20434]</label>
						<thumb>hubmenu/sets.png</thumb>
						<onclick>ActivateWindow(Videos,MovieSets,return)</onclick>
					</item>
					<item>
						<description>Tags</description>
						<label>$LOCALIZE[20459]</label>
						<thumb>hubmenu/tags.png</thumb>
						<onclick>ActivateWindow(Videos,MovieTags,return)</onclick>
					</item>										
					<item>
						<description>Playlists</description>
						<label>$LOCALIZE[136]</label>
						<thumb>hubmenu/playlists.png</thumb>
						<onclick>ActivateWindow(Videos,special://videoplaylists/,return)</onclick>
					</item>
					<item>
						<description>Addons</description>
						<label>$LOCALIZE[24001]</label>
						<thumb>hubmenu/addons.png</thumb>
						<onclick>ActivateWindow(Videos,addons://sources/video/,return)</onclick>
					</item>
					<item>
						<description>Files</description>
						<label>$LOCALIZE[744]</label>
						<thumb>hubmenu/files.png</thumb>
						<onclick>ActivateWindow(Videos,Files,return)</onclick>
					</item>
				</content>
				
			</control>
			
		</control>					
			
        <control type="grouplist">
			<left>550</left>
            <width>1370</width>
            <height>1050</height>
            <scrolltime tween="cubic" easing="out">600</scrolltime>
            <pagecontrol>9010</pagecontrol>
            <itemgap>90</itemgap>

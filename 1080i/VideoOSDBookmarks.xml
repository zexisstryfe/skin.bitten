<?xml version="1.0" encoding="UTF-8"?>

<window id="125">
    <defaultcontrol always="true">11</defaultcontrol>
	
    <controls>
		
        <control type="group">
			<posy>700</posy>
			<animation type="WindowOpen">
				<effect type="slide" start="0,380" end="0,0" time="600" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="0,380" time="400" tween="cubic" easing="in" />
			</animation>

			<control type="image">
				<width>1920</width>
				<height>380</height>
				<include>Common_Color_BaseWhite</include>
			</control>

			<control type="image">
				<width>1920</width>
				<height>80</height>
				<texture colordiffuse="BaseMediumHigh">colors/color_white.png</texture>
			</control>
			
			<control type="scrollbar" id="7">
				<posy>370</posy>
				<height>10</height>
				<orientation>horizontal</orientation>
				<onup>11</onup>
				<ondown>9000</ondown>
				<width>1920</width>
			</control>

			<control type="group">			
				<posy>20</posy>
				<posx>20</posx>
				
				<control type="label">
					<width>940</width>
					<height>40</height>
					<font>font45R</font>
					<label>$LOCALIZE[298]</label>
				</control>

				<!--Button List-->
				<control type="grouplist" id="9000">
					<posy>-10</posy>
					<posx>1660</posx>
					<width>240</width>
					<height>75</height>
					<itemgap>18</itemgap>
					<orientation>horizontal</orientation>
					<onleft>9000</onleft>
					<onright>9000</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					
					<control type="button" id="2">
						<description>Create Bookmark button</description>
						<include>Common_Player_Button</include>
						<texturefocus colordiffuse="$VAR[Accent_100]">buttons/addbookmarkFO.png</texturefocus>
						<texturenofocus>buttons/addbookmarkNF.png</texturenofocus>
					</control>
					
					<control type="button" id="3">
						<description>Clear Bookmark button</description>
						<include>Common_Player_Button</include>
						<texturefocus colordiffuse="$VAR[Accent_100]">buttons/clearbookmarkFO.png</texturefocus>
						<texturenofocus>buttons/clearbookmarkNF.png</texturenofocus>
					</control>
					
					<control type="button" id="4">
						<description>Set Bookmark button</description>
						<include>Common_Player_Button</include>
						<texturefocus colordiffuse="$VAR[Accent_100]">buttons/setbookmarkFO.png</texturefocus>
						<texturenofocus>buttons/setbookmarkNF.png</texturenofocus>
						<visible>Control.IsEnabled(4)</visible>
					</control>
					
					<control type="image">
						<description>Set Bookmark</description>
						<width>60</width>
						<height>60</height>
						<texture>buttons/setbookmarkDISABLED.png</texture>
						<visible>!Control.IsEnabled(4)</visible>
					</control>
					
				</control>					

				<!--Bookmark List-->
				<control type="fixedlist" id="11">
					<posy>80</posy>
					<width>1880</width>
					<height>250</height>
					<ondown>7</ondown>
					<onup>9000</onup>
					<scrolltime>200</scrolltime>
					<pagecontrol>7</pagecontrol>
					<orientation>horizontal</orientation>
					<itemlayout height="250" width="465">
					
						<control type="image">
							<width>445</width>
							<height>250</height>
							<info>ListItem.Icon</info>
						</control>
						
						<control type="label">
							<posx>20</posx>
							<posy>200</posy>
							<width>405</width>
							<height>30</height>
							<align>left</align>
							<info>ListItem.Label</info>
							<shadowcolor>TrueBlack</shadowcolor>
						</control>
						
					</itemlayout>
					
					<focusedlayout height="250" width="465">
					
						<control type="image">
							<width>445</width>
							<height>250</height>
							<info>ListItem.Icon</info>
							<bordertexture border="10" colordiffuse="$VAR[Accent_100]">colors/color_white.png</bordertexture>
							<bordersize>10</bordersize>
							<animation type="Focus" reversible="false">
								<effect type="zoom" center="auto" start="100" end="105" time="300" tween="back" easing="out" />
							</animation>
						</control>
						
						<control type="label">
							<posx>20</posx>
							<posy>200</posy>
							<width>405</width>
							<height>30</height>
							<align>left</align>
							<textcolor>$VAR[Accent_100]</textcolor>
							<info>ListItem.Label</info>
							<shadowcolor>TrueBlack</shadowcolor>
						</control>
						
					</focusedlayout>
					
				</control>

			</control>

        </control>
		
    </controls>
	
</window>